<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="styleSubtitulo">
        <item name="android:textColor">@color/texto1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="styleTitulo">
        <item name="android:textColor">@color/texto6</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="styleOracion">
        <item name="android:textColor">@color/texto3</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="styleLabel">
        <item name="android:textColor">@color/texto4</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="styleLabelSmall">
        <item name="android:textColor">@color/texto1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="styleButton">
        <item name="android:backgroundTint">@color/fondo2</item>
        <item name="android:textColor">@color/texto6 </item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false </item>
    </style>

    <style name="styleEditText">
        <item name="android:textColor">@color/texto7</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp </item>
        <item name="android:inputType">text</item>
        <item name="maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/fondo3</item>
    </style>

    <style name="styleEditTextUnaPalabra">
        <item name="android:textColor">@color/texto5</item>
        <item name="android:textSize">20dp </item>
        <item name="android:maxLength">1</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="layout_constraintHorizontal_bias">0.05</item>
        <item name="layout_constraintVertical_bias">0.075</item>
        <item name="android:backgroundTint">@color/fondo6</item>
    </style>

    <style name="spinner_style">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:dropDownWidth">533dp</item>
        <item name="android:showDividers">none</item>
        <item name="android:background">@color/fondo6</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:dropDownHeight">70dp</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:dropDownSelector">@color/fondo7</item>
    </style>

    <style name="styleButtonOpciones">
        <item name="android:textColor">@color/texto3</item>
        <item name="android:textSize">20dp </item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/fondo3</item>
        <item name="android:textAllCaps">false </item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>



</resources>